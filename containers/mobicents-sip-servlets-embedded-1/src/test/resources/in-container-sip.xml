<sip-app xmlns="http://www.jcp.org/xml/ns/sipservlet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.jcp.org/xml/ns/sipservlet http://www.jcp.org/xml/ns/sipservlet/sip-app_1_1.xsd"
        xmlns:javaee="http://java.sun.com/xml/ns/javaee" xmlns:xs="http://www.w3.org/2001/XMLSchema"
        version="1.1">
  <app-name>ArquillianMobicentsSipServletsTestApplication</app-name> 

  <context-param>
    <javaee:param-name>pet</javaee:param-name>
    <javaee:param-value>cat</javaee:param-value>
  </context-param>
  <context-param>
    <javaee:param-name>hobby</javaee:param-name>
    <javaee:param-value>halo</javaee:param-value>
  </context-param>

  <servlet>
    <javaee:servlet-name>TestSipServlet</javaee:servlet-name>
    <javaee:servlet-class>org.jboss.arquillian.container.mobicents.servlet.sip.embedded_1.TestSipServlet</javaee:servlet-class>
    <javaee:init-param>
      <javaee:param-name>eyes</javaee:param-name>
      <javaee:param-value>brown</javaee:param-value>
    </javaee:init-param>

    <javaee:init-param>
      <javaee:param-name>hair</javaee:param-name>
      <javaee:param-value>black</javaee:param-value>
    </javaee:init-param>

  </servlet>
</sip-app>