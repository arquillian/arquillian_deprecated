	<section id="container.jbossas-remote-6.configuration">
		<title>Configuration</title>

		<para>
			Namespace: urn:arq:org.jboss.arquillian.container.jbossas.remote_6_0
		</para>
		<table frame="all">
			<title>Container Configuration Options</title>
			<tgroup cols="4">
